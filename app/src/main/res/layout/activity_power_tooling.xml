<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.painting.powertooling.PowerToolingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_basic"
            android:theme="@style/ThemeOverlay.MyApp.ActionBar" />


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/blasting_dummy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Touchup:"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/blasting_definition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/blasting_dummy_text"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/white"
                    android:elevation="8dp"
                    android:lineSpacingExtra="8dp"
                    android:padding="8dp"
                    android:text="Ship repair coating and painting of the hull block erection butt, seam joints and edges are also defined as a “touch up method”.
 The touch-up method is normally applied in the following areas:
•	 Stripe coating on free edges and in narrow spaces where spray coating is difficult to apply. Where airless spray is difficult to apply, or when the required film thickness stripe coating should be after spray coating
•	 Touch up of damaged areas caused by installing or removing paint scaffoldings.
•	 Touch up to burnt surfaces caused by welding in outfitting work.
•	 Touch up to compensate deficient film thickness after inspection.
•	 Touch up of areas of defective paint material or poor workmanship."
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    tools:targetApi="lollipop" />

                <TextView
                    android:id="@+id/procedures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/blasting_definition"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Procedures for Touchup"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/procedures"
                    android:orientation="vertical">


                    <android.support.v7.widget.CardView
                        android:id="@+id/step_one_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/white"
                        android:elevation="8dp"
                        android:paddingBottom="4dp"
                        tools:targetApi="lollipop">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp">

                            <TextView
                                android:id="@+id/step_one_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="32dp"
                                android:paddingBottom="8dp"
                                android:text="Painting tools"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView

                        android:id="@+id/step_two_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/step_one_card"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/white"
                        android:elevation="8dp"
                        android:paddingBottom="4dp"
                        tools:targetApi="lollipop">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp">

                            <TextView
                                android:id="@+id/step_two_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="24dp"
                                android:paddingBottom="8dp"
                                android:text="Entry in confined space for touch up painting"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView

                        android:id="@+id/step_three_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/step_two_card"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/white"
                        android:elevation="8dp"
                        android:paddingBottom="4dp"
                        tools:targetApi="lollipop">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp">

                            <TextView
                                android:id="@+id/step_three_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="24dp"
                                android:paddingBottom="8dp"
                                android:text="Working at height"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
                        </RelativeLayout>


                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView

                        android:id="@+id/step_four_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/step_two_card"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/white"
                        android:elevation="8dp"
                        android:paddingBottom="4dp"
                        tools:targetApi="lollipop">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp">

                            <TextView
                                android:id="@+id/ss"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="24dp"
                                android:paddingBottom="8dp"
                                android:text="Clean up de-mobilize equipment"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
                        </RelativeLayout>


                    </android.support.v7.widget.CardView>


                </LinearLayout>
            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>